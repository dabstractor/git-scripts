#!/bin/zsh

# Create a new git worktree with a branch
# Usage: newwt <branch-name>

if [[ $# -eq 0 ]]; then
    echo "Usage: newwt <branch-name>"
    echo "Creates a new git worktree in ../project-branch with the specified branch"
    exit 1
fi

branch_name="$1"
project=$(basename $(git rev-parse --show-toplevel))

git worktree add "../$project-$branch_name" -b "$branch_name"